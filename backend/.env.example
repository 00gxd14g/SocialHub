# SocialHub Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///socialhub.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/socialhub

# MySQL (alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/socialhub

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Social Media API Keys (Optional - for full platform integration)

# Facebook Graph API
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Twitter API v2
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Instagram Basic Display API
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# YouTube Data API
YOUTUBE_API_KEY=your-youtube-api-key

# Email Configuration (Optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Webhook Configuration (Optional - for real-time updates)
WEBHOOK_SECRET=your-webhook-secret

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Rate Limiting Configuration
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/socialhub.log

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Production Settings (Uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_COOKIE_SECURE=True
# PREFERRED_URL_SCHEME=https

